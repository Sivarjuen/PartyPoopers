{
  "compilerOptions": {
    "sourceMap": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "module": "es6",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowJs": false,
    "baseUrl": ".",
    "skipLibCheck": true,
    "target": "es6",
    "moduleResolution": "node",
    "jsx": "react",
    "jsxFactory": "h",
    "outDir": "dist"
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "./dist/"]
}
